// This is your Prisma schema file for Doctor Management Service
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Schedules table - Updated to work with new structure
model Schedule {
  id          String   @id @default(uuid()) @map("schedule_id")
  doctorId    String   @map("doctor_profile_id")
  clinicId    Int      @map("clinic_id")
  date        DateTime @db.Date
  isAvailable Boolean  @default(true) @map("is_available")

  timeSlots ScheduleTimeSlot[]

  @@map("schedules")
}

model TimeSlot {
  id        Int      @id @default(autoincrement())
  startTime DateTime @map("start_time") @db.Time
  endTime   DateTime @map("end_time") @db.Time

  scheduleTimeSlots ScheduleTimeSlot[]

  @@map("time_slots")
}

model ScheduleTimeSlot {
  scheduleId     String @map("schedule_id")
  timeSlotId     Int    @map("time_slot_id")
  maxBooking     Int    @default(3)
  currentBooking Int    @default(0)

  schedule Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  timeSlot TimeSlot @relation(fields: [timeSlotId], references: [id], onDelete: Cascade)

  @@id([scheduleId, timeSlotId])
  @@map("schedule_time_slots")
}

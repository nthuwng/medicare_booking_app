generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserType {
  ADMIN
  DOCTOR
  PATIENT
}

enum AuthProvider {
  EMAIL
  GOOGLE
  FACEBOOK
}

model User {
  id                 String         @id @default(uuid()) @map("user_id")
  email              String         @unique @db.VarChar(255)
  password           String         @map("password_hash") @db.VarChar(255)
  userType           UserType       @map("user_type")
  authProvider       AuthProvider   @default(EMAIL) @map("auth_provider")
  isActive           Boolean        @default(true) @map("is_active")
  createdAt          DateTime       @default(now()) @map("created_at")
  updatedAt          DateTime       @updatedAt @map("updated_at")
  verificationOtp    String?        @db.VarChar(6)
  verificationOtpExp DateTime?
  refreshTokens      RefreshToken[]

  @@map("users")
}

model RefreshToken {
  id        String   @id @default(uuid()) @map("refresh_token_id")
  token     String   @unique @db.VarChar(500)
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at")
  isRevoked Boolean  @default(false) @map("is_revoked")
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

// This is your Prisma schema file for Doctor Management Service
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Enum definitions
enum Gender {
  Male
  Female
  Other
}

enum ApprovalStatus {
  Pending
  Approved
  Rejected
}

// Specialties table
model Specialty {
  id            Int     @id @default(autoincrement()) @map("specialty_id")
  specialtyName String  @map("specialty_name") @db.VarChar(255)
  iconPath      String? @map("icon_path") @db.VarChar(255)
  description   String? @db.Text

  // Relations (many-to-many with Doctor)
  doctors DoctorSpecialty[]

  @@map("specialties")
}

// Clinics table
model Clinic {
  id          Int     @id @default(autoincrement()) @map("clinic_id")
  clinicName  String  @map("clinic_name") @db.VarChar(255)
  city        String? @db.VarChar(100)
  district    String? @db.VarChar(100)
  street      String? @db.VarChar(100)
  phone       String? @db.VarChar(20)
  description String? @db.Text

  // Relations (many-to-many with Doctor)
  doctors   DoctorClinic[]
  schedules Schedule[]
  fees      Fee[]

  @@map("clinics")
}

// Doctors table - Removed direct foreign keys to specialty and clinic
model Doctor {
  id              String         @id @default(uuid()) @map("doctor_profile_id")
  userId          String         @unique @map("user_id")
  fullName        String         @map("full_name") @db.VarChar(255)
  phone           String?        @db.VarChar(20)
  bio             String?        @db.Text
  experienceYears Int?           @default(0) @map("experience_years")
  gender          Gender
  avatarUrl       String?        @map("avatar_url") @db.VarChar(255)
  approvalStatus  ApprovalStatus @default(Pending) @map("approval_status")
  licenseNumber   String         @unique @map("license_number") @db.VarChar(50)
  createdAt       DateTime       @default(now()) @map("created_at")

  // Relations (many-to-many)
  specialties DoctorSpecialty[]
  clinics     DoctorClinic[]
  schedules   Schedule[]
  fees        Fee[]

  @@map("doctors")
}

// Junction table for Doctor-Specialty many-to-many relationship
model DoctorSpecialty {
  doctorId    String   @map("doctor_id")
  specialtyId Int      @map("specialty_id")
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")

  // Relations
  doctor    Doctor    @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  specialty Specialty @relation(fields: [specialtyId], references: [id], onDelete: Cascade)

  @@id([doctorId, specialtyId])
  @@map("doctor_specialties")
}

// Junction table for Doctor-Clinic many-to-many relationship
model DoctorClinic {
  doctorId  String   @map("doctor_id")
  clinicId  Int      @map("clinic_id")
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  doctor Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  clinic Clinic @relation(fields: [clinicId], references: [id], onDelete: Cascade)

  @@id([doctorId, clinicId])
  @@map("doctor_clinics")
}

// Schedules table - Updated to work with new structure
model Schedule {
  id          String   @id @default(uuid()) @map("schedule_id")
  doctorId    String   @map("doctor_profile_id")
  clinicId    Int      @map("clinic_id")
  date        DateTime @db.Date
  startTime   DateTime @map("start_time") @db.Time
  endTime     DateTime @map("end_time") @db.Time
  isAvailable Boolean  @default(true) @map("is_available")

  // Relations
  doctor Doctor @relation(fields: [doctorId], references: [id])
  clinic Clinic @relation(fields: [clinicId], references: [id])

  @@map("schedules")
}

// Fees table - Updated to work with new structure
model Fee {
  id              Int      @id @default(autoincrement()) @map("fee_id")
  doctorId        String   @map("doctor_profile_id")
  clinicId        Int      @map("clinic_id")
  consultationFee Decimal  @default(0.00) @map("consultation_fee") @db.Decimal(10, 2)
  bookingFee      Decimal  @default(0.00) @map("booking_fee") @db.Decimal(10, 2)
  createdAt       DateTime @default(now()) @map("created_at")

  // Relations
  doctor Doctor @relation(fields: [doctorId], references: [id])
  clinic Clinic @relation(fields: [clinicId], references: [id])

  @@map("fees")
}

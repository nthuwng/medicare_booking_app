// This is your Prisma schema file for Doctor Management Service
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Enum definitions
enum Gender {
  Male
  Female
  Other
}

enum ApprovalStatus {
  Pending
  Approved
  Rejected
}

enum City {
  Hanoi
  HoChiMinh
}

enum Title {
  BS // Bác sĩ
  ThS // Thạc sĩ
  TS // Tiến sĩ
  PGS // Phó Giáo sư
  GS // Giáo sư
}

// Specialties table
model Specialty {
  id            Int     @id @default(autoincrement()) @map("specialty_id")
  specialtyName String  @map("specialty_name") @db.VarChar(255)
  iconPath      String? @map("icon_path") @db.VarChar(255)
  description   String? @db.Text

  // Relations (one-to-many with Doctor)
  doctors Doctor[]

  @@map("specialties")
}

// Clinics table
model Clinic {
  id          Int     @id @default(autoincrement()) @map("clinic_id")
  clinicName  String  @map("clinic_name") @db.VarChar(255)
  city        City?   @map("city")
  iconPath    String? @map("icon_path") @db.VarChar(255)
  district    String? @db.VarChar(100)
  street      String? @db.VarChar(100)
  phone       String? @db.VarChar(20)
  description String? @db.Text

  // Relations (one-to-many with Doctor)
  doctors Doctor[]

  @@map("clinics")
}

// Doctors table - Added direct foreign keys to specialty and clinic
model Doctor {
  id              String         @id @default(uuid()) @map("doctor_profile_id")
  userId          String         @unique @map("user_id")
  fullName        String         @map("full_name") @db.VarChar(255)
  phone           String?        @db.VarChar(20)
  bio             String?        @db.Text
  experienceYears Int?           @default(0) @map("experience_years")
  gender          Gender
  avatarUrl       String?        @map("avatar_url") @db.VarChar(255)
  approvalStatus  ApprovalStatus @default(Pending) @map("approval_status")
  title           Title?         @map("title")

  // Foreign keys
  specialtyId Int @map("specialty_id")
  clinicId    Int @map("clinic_id")

  // Consultation fee (moved from separate Fee table)
  consultationFee Decimal @default(0.00) @map("consultation_fee") @db.Decimal(10, 2)
  bookingFee      Decimal @default(0.00) @map("booking_fee") @db.Decimal(10, 2)

  createdAt DateTime @default(now()) @map("created_at")

  // Relations (many-to-one)
  specialty Specialty @relation(fields: [specialtyId], references: [id])
  clinic    Clinic    @relation(fields: [clinicId], references: [id])

  @@map("doctors")
}
